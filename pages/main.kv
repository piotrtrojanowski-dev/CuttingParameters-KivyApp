<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: "vertical"
        panel: panel

        MDToolbar:
            id: toolbar
            title: "App"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["menu", lambda x: None]]

        MDBottomNavigation:
            id: panel

            MDBottomNavigationItem:

                text: "Home"
                icon: "home"

                BoxLayout:

                    size_hint_y: .95
                    padding: 15, 10
                    orientation: 'vertical'

                    GridLayout:
                        cols:2
                        spacing:15

                        MDCard:
                            orientation: "vertical"
                            padding: "8dp"
                            border_radius: '10dp'

                            MDIconButton:
                                icon: "calculator"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                user_font_size: "70sp"
                                halign: "center"
                                on_release:
                                    app.change_screen('parameters_screen', 'left')

                            MDLabel:
                                text: "PARAMETERS"
                                theme_text_color: "Secondary"
                                font_style: "Body2"
