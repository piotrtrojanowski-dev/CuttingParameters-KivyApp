<TestScreen>:
    id: test-screen
    name: "test_screen"

    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "Test"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["arrow-left", lambda x: app.change_screen('main', 'right')]]
            right_action_items: [["home", lambda x: app.change_screen('main', 'right')]]
            elevation: 10

        BoxLayout:
            padding: 3, 5


            GridLayout:
                cols:1
                spacing: 3


                MDRectangleFlatIconButton:

                    text: "TEST 1"
                    icon: "ab-testing"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('test_01', 'left')
                MDRectangleFlatIconButton:

                    text: "TEST 2"
                    icon: "ab-testing"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('test_02_screen', 'left')
                MDRectangleFlatIconButton:

                    text: "TEST 3"
                    icon: "ab-testing"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('test_03_screen', 'left')

                MDRectangleFlatIconButton:

                    text: "TEST 4"
                    icon: "ab-testing"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('test_04_screen', 'left')