<IntroductionTurning>

    size_hint: 1, None
    height: self.minimum_height
    orientation: 'vertical'
    adaptive_size: True
    padding: 3,3
    md_bg_color: 0, 0, 0, 1
    adaptive_width: True

    MDGridLayout:
        cols: 1
        size_hint: 1, None
        height: self.minimum_height
        md_bg_color: 0,0,0, 0

        MDLabel:
            text: root.text
            size: self.texture_size
            font_style: "Body2"
            theme_text_color: "Secondary"
            size_hint:  1, None
            halign: 'justify'
            valign: 'middle'

        MDSeparator:
            height: "2dp"








