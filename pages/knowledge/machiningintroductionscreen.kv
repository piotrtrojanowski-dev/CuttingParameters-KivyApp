#:import escape_markup kivy.utils
#:import markup kivy.core.text

<IntroductionContent>

    adaptive_height: True
    padding: 3,3
    orientation: "vertical"


    MDLabel:

        text: root.text

        markup:True
        font_style: "Body2"
        theme_text_color: "Secondary"
        halign: 'justify'
        #valign: 'middle'
        italic: True

        size_hint: (1, None)
        size: self.texture_size



    MDSeparator:
        height: "2dp"


