<MillingScreen>:
    id: milling_screen
    name: "milling_screen"

    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "Milling"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["arrow-left", lambda x: app.change_screen('parameters_screen', 'right')]]


        BoxLayout:
            padding: 3, 3


            GridLayout:
                cols:1
                spacing: 3


                MDRectangleFlatIconButton:

                    text: "Cutting speed"
                    icon: "arrow-right"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('milling_cutting_speed_screen', 'left')
                MDRectangleFlatIconButton:

                    text: "Spindle speed"
                    icon: "arrow-right"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('milling_spindle_speed_screen', 'left')

                MDRectangleFlatIconButton:

                    text: "Metal removal rate"
                    icon: "arrow-right"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('milling_removal_rate_screen', 'left')

                MDRectangleFlatIconButton:

                    text: "Time in cut"
                    icon: "arrow-right"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('milling_time_in_cut_screen', 'left')

                MDRectangleFlatIconButton:

                    text: "Total cycle time"
                    icon: "arrow-right"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('milling_total_cycle_time_screen', 'left')

                MDRectangleFlatIconButton:

                    text: "Power requirement"
                    icon: "arrow-right"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('milling_power_requirement', 'left')











                MDLabel:
