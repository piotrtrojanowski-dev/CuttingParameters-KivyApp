<ItemConfirm>
    id: item_confirm
    on_release: root.set_icon(check)

    RightCheckbox:
        id: check
        group: "check"

<MyMDRaisedButton>:
    text: "OK"
    on_release: app.set_value()

<PowerRequirementScreen>:

    score: score
    metal_removal_rate: metal_removal_rate
    specific_cutting_force: specific_cutting_force
    field: field

    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "Power requirement"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["arrow-left", lambda x: app.change_screen('turning_screen', 'right')]]
            right_action_items: [["home", lambda x: app.change_screen('main', 'right')]]
            elevation: 10

        GridLayout:
            cols:1
            spacing: 20
            padding: 10

            MDLabel:
                text: 'Power requirement (Pc) kW'
                secondary_text: 'kW'
                halign: "center"

            MDLabel:
                id: score
                text: '0'
                font_style: 'H3'
                halign: "center"


            MyMDTextField:
                id: metal_removal_rate
                hint_text: "Metal removal rate (Q) [cm3/min]"

            MDTextField:
                id: field
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint_x: None
                width: "200dp"
                hint_text: "Password"
                on_focus: if self.focus: root.on_checkbox_active()

            MDTextField:

                size_hint_x: None
                width: "50dp"
                hint_text: "kat"


            MyMDTextField:
                id: specific_cutting_force
                hint_text: "Specific cutting force (kc) [N/mm2]"

            MDRaisedButton:
                text: "Clear"
                increment_width: "296dp"
                text_color: 1, 1, 1, 1
                md_bg_color: app.theme_cls.primary_color
                halign: "center"
                height: dp(40)
                elevation_normal: 10
                on_release:
                    app.clear_text(machined_diameter, cutting_speed)

            MDLabel:

    Image:
        source: "icons/calculator.png"
        opacity: .05