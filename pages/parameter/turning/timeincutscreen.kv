<TimeInScreen>:
    id: time_in_screen
    name: "time_in_screen"

    start_diameter: start_diameter
    machined_diameter: machined_diameter
    cutting_speed: cutting_speed
    depth_of_cut: depth_of_cut
    length_of_cut: length_of_cut
    feed_per_revolution: feed_per_revolution

    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "Time in cut"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["arrow-left", lambda x: app.change_screen('turning_screen', 'right')]]


        GridLayout:
            cols:1

            padding: 10

            MDLabel:
                text: 'Time in cut (Tc) s'
                halign: "center"

            MDLabel:
                id: score
                text: '0'
                font_style: 'H3'
                halign: "center"

            MyMDTextField:
                id: start_diameter
                hint_text: "Start diameter (Dm1) [mm]"

            MyMDTextField:
                id: machined_diameter
                hint_text: "Machined diameter (Dm) [mm]"

            MyMDTextField:
                id: cutting_speed
                hint_text: "Cutting speed (Vc) [m/min]"

            MyMDTextField:
                id: depth_of_cut
                hint_text: "Depth of cut (ap) [mm]"

            MyMDTextField:
                id: length_of_cut
                hint_text: "Length of cut (lm) [mm]"

            MyMDTextField:
                id: feed_per_revolution
                hint_text: "Depth of cut (fn) [mm]"



            MDFlatButton:
                text: "Clear"
                increment_width: "295dp"
                text_color: 1, 1, 1, 1
                md_bg_color: app.theme_cls.primary_color
                halign: "center"
                height: dp(40)
                on_release:
                    app.clear_text(machined_diameter, cutting_speed)


