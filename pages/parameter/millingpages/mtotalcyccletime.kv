<MillingTotalCycleTimeScreen>:

    score: score
    depth_of_cut: depth_of_cut
    feed_per_revolution: feed_per_revolution
    cutting_speed: cutting_speed

    id: metal_removal_rate_screen
    name: 'metal_removal_rate_screen'

    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "Metal removal rate"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["arrow-left", lambda x: app.change_screen('milling_screen', 'right')]]
            right_action_items: [["home", lambda x: app.change_screen('main', 'right')]]
            elevation: 10


        GridLayout:
            cols:1
            spacing: 15
            padding: 10

            MDLabel:
                text: 'Metal removal rate (Q) cm3/min'
                halign: "center"

            MDLabel:
                id: score
                text: '0'
                font_style: 'H3'
                halign: "center"


            MyMDTextField:
                id: feed_per_revolution
                hint_text: "Feed per revolution (fn) [mm]"



            MyMDTextField:
                id: cutting_speed
                hint_text: "Cutting speed (vc) [m/min]"

            MyMDTextField:
                id: depth_of_cut
                hint_text: "Depth of cut (ap) [mm]"


            MDRaisedButton:
                text: "Clear"
                increment_width: "296dp"
                text_color: 1, 1, 1, 1
                md_bg_color: app.theme_cls.primary_color
                halign: "center"
                height: dp(40)
                elevation_normal: 10
                on_release:
                    app.clear_text(machined_diameter, cutting_speed)


    Image:
        source: "icons/calculator.png"
        opacity: .05