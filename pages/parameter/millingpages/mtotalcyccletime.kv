<MillingTotalCycleTimeScreen>:

    score: score
    time_in_cut: time_in_cut
    number_of_passes: number_of_passes
    total_idle_time: total_idle_time

    id: metal_removal_rate_screen
    name: 'metal_removal_rate_screen'

    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "Total cycle time"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["arrow-left", lambda x: app.change_screen('milling_screen', 'right')]]
            right_action_items: [["home", lambda x: app.change_screen('main', 'right')]]
            elevation: 10


        GridLayout:
            cols:1
            spacing: 15
            padding: 10

            MDLabel:
                text: 'Time cycle time [s]'
                halign: "center"

            MDLabel:
                id: score
                text: '0'
                font_style: 'H3'
                halign: "center"


            MyMDTextField:
                id: time_in_cut
                hint_text: "Time in cut (Tc) [s]"



            MyMDTextField:
                id: number_of_passes
                hint_text: "Number of passes [pcs]"

            MyMDTextField:
                id: total_idle_time
                hint_text: "Total idle time [s]"


            MDRaisedButton:
                text: "Clear"
                increment_width: "296dp"
                text_color: 1, 1, 1, 1
                md_bg_color: app.theme_cls.primary_color
                halign: "center"
                height: dp(40)
                elevation_normal: 10
                on_release:
                    app.clear_text(machined_diameter, cutting_speed)


    Image:
        source: "icons/calculator.png"
        opacity: .05