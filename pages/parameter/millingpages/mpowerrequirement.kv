<MillingPowerRequirement>:


    metal_removal_rate: metal_removal_rate
    rake_angle: rake_angle
    specific_cutting_force: specific_cutting_force


    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "Power requirement"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["arrow-left", lambda x: app.change_screen('milling_screen', 'right')]]
            right_action_items: [["home", lambda x: app.change_screen('main', 'right')]]
            elevation: 10


        GridLayout:
            cols:1
            spacing: 15
            padding: 10

            MDLabel:
                text: 'Power requirement (Pc) [kW]'
                halign: "center"

            MDLabel:
                id: score
                text: '0'
                font_style: 'H3'
                halign: "center"


            MyMDTextField:
                id: metal_removal_rate
                hint_text: "Metal removal rate (Q) [cm3/min]"



            MyMDTextField:
                id: rake_angle
                hint_text: "Rake angle"

            MyMDTextField:
                id: specific_cutting_force
                hint_text: "Specific cutting force (kc) [N/mm2]"


            MDRaisedButton:
                text: "Clear"
                increment_width: "296dp"
                text_color: 1, 1, 1, 1
                md_bg_color: app.theme_cls.primary_color
                halign: "center"
                height: dp(40)
                elevation_normal: 10
                on_release:
                    app.clear_text(machined_diameter, cutting_speed)


    Image:
        source: "icons/calculator.png"
        opacity: .05