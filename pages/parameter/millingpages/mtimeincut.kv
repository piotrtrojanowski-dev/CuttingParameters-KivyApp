<MillingTimeInCutScreen>:

    score: score
    length_of_cut: length_of_cut
    table_feed: table_feed

    id: metal_removal_rate_screen
    name: 'metal_removal_rate_screen'

    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "Time in cut (Tc)"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["arrow-left", lambda x: app.change_screen('milling_screen', 'right')]]
            right_action_items: [["home", lambda x: app.change_screen('main', 'right')]]
            elevation: 10


        GridLayout:
            cols:1
            spacing: 15
            padding: 10

            MDLabel:
                text: 'Time in cut (Tc) s'
                halign: "center"

            MDLabel:
                id: score
                text: '0'
                font_style: 'H3'
                halign: "center"


            MyMDTextField:
                id: length_of_cut
                hint_text: "Length of cut (lm) [mm]"



            MyMDTextField:
                id: table_feed
                hint_text: "Table feed (vf) [mm/min]"

            MDRaisedButton:
                text: "Clear"
                increment_width: "296dp"
                text_color: 1, 1, 1, 1
                md_bg_color: app.theme_cls.primary_color
                halign: "center"
                height: dp(40)
                elevation_normal: 10
                on_release:
                    app.clear_text(machined_diameter, cutting_speed)


    Image:
        source: "icons/calculator.png"
        opacity: .05