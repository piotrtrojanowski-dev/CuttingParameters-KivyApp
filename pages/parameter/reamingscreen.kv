<ReamingScreen>:

    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "Reaming"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["arrow-left", lambda x: app.change_screen('parameters_screen', 'right')]]
            right_action_items: [["home", lambda x: app.change_screen('main', 'right')]]
            elevation: 10


        BoxLayout:
            padding: 3, 5


            GridLayout:
                cols:1
                spacing: 3


                MDRectangleFlatIconButton:

                    text: "Cutting speed"
                    icon: "arrow-right"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('reaming_cutting_screen', 'left')
                MDRectangleFlatIconButton:

                    text: "Spindle speed"
                    icon: "arrow-right"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('reaming_spindle_screen', 'left')
                MDRectangleFlatIconButton:

                    text: "Feed speed"
                    icon: "arrow-right"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('reaming_feed_speed', 'left')

                MDRectangleFlatIconButton:

                    text: "Time in cut"
                    icon: "arrow-right"
                    halign: "center"
                    width: dp(343)
                    height: dp(60)
                    on_release:
                        app.change_screen('reaming_time_in_cut', 'left')

                MDLabel: